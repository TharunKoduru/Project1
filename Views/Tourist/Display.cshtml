@using Ex19.Models
@model List<TouristPlace>
@{
    ViewBag.Title = "SavePlace";
}


<div id="carouselExampleAutoplaying" class="carousel slide" data-bs-ride="carousel">
    <div class="carousel-inner">
        <div class="carousel-item active">
            <img height="420" src="~/Images/TouristPlace/Slide 1.jpg" class="d-block w-100" alt="img">
        </div>
        <div class="carousel-item">
            <img height="420" src="~/Images/TouristPlace/Slide 3.jpg" class="d-block w-100" alt="img">
        </div>
        <div class="carousel-item">

            <img height="420" src="~/Images/TouristPlace/Slide 5.jpg" class="d-block w-100" alt="img">
        </div>
        <div class="carousel-item">
            <img height="420" src="~/Images/TouristPlace/Slide4.jpg" class="d-block w-100" alt="img">
        </div>
        <div class="carousel-item">

            <img height="420" src="~/Images/TouristPlace/Slide 2.jpg" class="d-block w-100" alt="img">
        </div>
    </div>
</div>
<br />
<h2>Top Attractions</h2>

<div class="row row-cols-1 row-cols-md-3 g-4">

    @{
        foreach (TouristPlace tp in Model)
        {
            <div class="col">
                <div class="card h-100">
                    <img src="@Url.Content(tp.ImagePath)" class="card-img-top" alt="@tp.TouristPlaceName">
                    <div class="card-body">
                        <h5 class="card-title">@tp.TouristPlaceName</h5>
                        <p class="card-text">
                            @tp.Description
                        </p>
                    </div>
                    <div class="card-footer">
                        <a class="btn btn-link"
                           href="@tp.MoreInfo"
                           target="_blank">More Info</a>
                    </div>
                </div>
            </div>
        }
    }



</div>

